<Window x:Class="DBConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile"
        mc:Ignorable="d"
        Title="DB Connection" Height="103.191" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter database connection string:" Padding=" 2"/>
            <TextBox Width="282" Text="{Binding ConnectionString, Mode=OneWayToSource}" HorizontalAlignment="Left"/>
            <Button Content="Confirm" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
